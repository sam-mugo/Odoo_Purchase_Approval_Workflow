<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_approval_config_form" model="ir.ui.view">
        <field name="name">purchase.approval.config.form</field>
        <field name="model">purchase.approval.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <!-- Fixed label with proper class -->
                            <div class="o_form_label" colspan="4">
                                <strong>Amount Thresholds</strong>
                            </div>
                            <group string="Level 1 Approval">
                                <field name="level1_min_amount"/>
                                <field name="level1_max_amount"/>
                                <field name="level1_approver_group_id" domain="[('category_id', '=', category_id)]"/>
                            </group>
                            <group string="Level 2 Approval">
                                <field name="level2_min_amount"/>
                                <field name="level2_approver_group_id" domain="[('category_id', '=', category_id)]"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_purchase_approval_config_list" model="ir.ui.view">
        <field name="name">purchase.approval.config.list</field>
        <field name="model">purchase.approval.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="level1_min_amount"/>
                <field name="level1_max_amount"/>
                <field name="level2_min_amount"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_purchase_approval_config" model="ir.actions.act_window">
        <field name="name">Purchase Approval Configuration</field>
        <field name="res_model">purchase.approval.config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_company_id': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your purchase approval workflow thresholds and approvers.
            </p>
        </field>
    </record>

    <menuitem id="menu_purchase_approval_config" 
              name="Approval Configuration" 
              parent="purchase.menu_purchase_config"
              action="action_purchase_approval_config"
              sequence="50"/>
</odoo>