<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Create the purchase category if it doesn't exist -->
        <record id="module_category_purchase_approval" model="ir.module.category">
            <field name="name">Purchase Approval</field>
            <field name="description">Purchase Approval Workflow</field>
            <field name="sequence">1</field>
        </record>
        
        <!-- Approval Groups -->
        <record id="group_purchase_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_purchase_approval"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>

        <record id="group_purchase_approval_level1" model="res.groups">
            <field name="name">Purchase Level 1 Approver</field>
            <field name="category_id" ref="module_category_purchase_approval"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>
        
        <record id="group_purchase_approval_level2" model="res.groups">
            <field name="name">Purchase Level 2 Approver</field>
            <field name="category_id" ref="module_category_purchase_approval"/>
            <field name="implied_ids" eval="[(4, ref('group_purchase_approval_level1'))]"/>
        </record>
        
        <!-- Access Rights for Managers -->
        <record id="group_purchase_approval_manager" model="res.groups">
            <field name="name">Purchase Approval Manager</field>
            <field name="category_id" ref="module_category_purchase_approval"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="purchase.group_purchase_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('purchase_approval_workflow.group_purchase_approval_manager'))]"/>
        </record>
    
    </data>
</odoo>